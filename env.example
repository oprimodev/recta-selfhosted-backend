# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/recta

# Firebase Admin - use either option:
# Option A: Path to service account JSON (do not commit the file)
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json
# Option B: Individual credentials (e.g. for Railway)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Redis (optional)
# REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development

# Swagger (optional - if set, Swagger UI is protected with basic auth)
# SWAGGER_USERNAME=admin
# SWAGGER_PASSWORD=your-secure-password

# First run - run migrations on startup (optional)
# FIRST_RUN=false

# CORS - comma-separated allowed origins
# ALLOWED_ORIGINS=https://your-frontend.app,http://localhost:5173
